<div class="incident-index">
  <.headline :let={vibe}>
    <.icon name="hero-trophy-mini" /> {@resolved_count} Incidents Resolved This Month! {vibe}
    <:tagline>
      Thanks for pitching in.
    </:tagline>
  </.headline>

  <.filter_form form={@form} category_options={@category_options} />

  <div class="incidents" id="incidents" phx-update="stream">
    <div id="empty" class="no-results only:block hidden">
      No incident found. Try changing your filters.
    </div>
    <.incident_card :for={{dom_id, incident} <- @streams.incidents} incident={incident} id={dom_id} />
  </div>
</div>
